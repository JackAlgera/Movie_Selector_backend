CREATE TABLE Genre (
    id INT PRIMARY KEY IDENTITY (1, 1),
    name VARCHAR (255) NOT NULL
);

CREATE TABLE Language (
    id INT PRIMARY KEY IDENTITY (1, 1),
    languageCode VARCHAR (255) NOT NULL,
    name VARCHAR (255) NOT NULL
);

CREATE TABLE Country (
    id INT PRIMARY KEY IDENTITY (1, 1),
    countryCode VARCHAR (255) NOT NULL,
    name VARCHAR (255) NOT NULL
);

CREATE TABLE Movie (
    id INT PRIMARY KEY IDENTITY (1, 1),
    countryCode VARCHAR (255) NOT NULL,
    name VARCHAR (255) NOT NULL
);

